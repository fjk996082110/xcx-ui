.no-location {
  position: relative;
  height: 100%;
}
.inner-btn {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  background-image: linear-gradient(180deg, 
  #00a0e9 0%, 
  #0095e9 73%, 
  #0089e9 100%);
  box-shadow: 0 0 10rpx 0rpx #0089e9;
  text-align: center;
  line-height: 150px;
}
.map_container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.map{
  width: 100%;
  height: 100%;
}
.map_text{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0px;
  height: 120px;
  background: #fff;
  padding: 0 15px;
}
text{
  margin: 5px 0;
  display: block;
  font-size:12px;
}
.h1{
  margin: 15px 0;
  font-size:15px;
}